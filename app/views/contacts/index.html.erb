<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <h1 class="mt-2 pb-2">Lista de Contatos</h1>

      <table class="table table-border table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th colspan="3">Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.name %></td>
              <td><%= contact.phone %></td>
              <td><%= link_to 'Show', contact, class: 'btn btn-outline-info btn-sm' %></td>
              <td><%= link_to 'Editar', edit_contact_path(contact), class: 'btn btn-outline-success btn-sm' %></td>
              <td><%= link_to 'Destruir', contact, method: :delete, class: 'btn btn-outline-danger btn-sm', data: { confirm: 'Apagar contato. Tem certeza?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'Novo Contato', new_contact_path, class: 'btn btn-primary' %>

    </div>
  </div>
</div>