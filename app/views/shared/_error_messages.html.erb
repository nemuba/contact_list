<% if object.errors.any? %>
            <div class="alert alert-danger" role="alert">
                <h2>Ops foi encontrado <%= pluralize(object.errors.count, "erro","erros") %> </h2>
                <ul>
                    <% object.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>